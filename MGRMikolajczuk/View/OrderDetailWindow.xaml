<Window x:Class="MGRMikolajczuk.View.OrderDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MGRMikolajczuk.View"
        mc:Ignorable="d"
        Title="OrderDetailWindow" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <DockPanel x:Name="DockPanelProcuctList" Grid.Column="0" Margin="10,20,10,10" LastChildFill="False" >
        </DockPanel>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="13*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <UniformGrid Grid.Row="0"   x:Name="UniformGridNewProduct" Columns="5" Rows="8" Margin="10,10">
            </UniformGrid>
            <UniformGrid Columns="3" Grid.Row="1">
                <Button Content="Zakończ zamówienie" Grid.Row="1" Style="{StaticResource ButtonShadow}" Click="Button_Click"/>
            </UniformGrid>
        </Grid>
    </Grid>
</Window>
