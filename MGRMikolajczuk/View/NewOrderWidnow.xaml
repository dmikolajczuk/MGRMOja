<Window x:Class="MGRMikolajczuk.View.NewOrderWidnow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MGRMikolajczuk.View"
        mc:Ignorable="d"
        Title="NewOrder" Height="300" Width="500">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,30,0,0">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal"  DockPanel.Dock="Top" >
            <Label Content="Nazwa zamówienia" Margin="20,0,0,0" FontSize="20"/>
            <TextBox  x:Name="NameLabel" Text="" FontSize="20" Width="100" />
        </StackPanel>
        <Button Grid.Row="1" Margin="20,20" Height="30" Width="200" Content="Dodaj zamówienie" Style="{StaticResource ButtonShadow}" Click="Button_Click"/>
    </Grid>
</Window>
